<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group.chat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
  	<uses-permission android:name="android.permission.INTERNET"/> 
  	
    <permission android:name="liu.permission.activity.CHATTING"/> 
    <permission android:name="liu.permission.service.internet"/> 
    <application android:theme="@style/AppTheme" 
        android:label="@string/app_name" 
        android:icon="@drawable/ic_launcher"
         android:allowBackup="true"> 
         <activity android:name=".Chat" 
             android:label="@string/app_name"> 
             <intent-filter> 
                 <action android:name="android.intent.action.MAIN"/> 
                 <category android:name="android.intent.category.LAUNCHER"/> 
             </intent-filter> 
        </activity> 
        
		<activity android:name=".Chatting" 
	   			 android:permission="liu.permission.activity.CHATTING">
             <intent-filter> <action android:name="liu.intent.action.CHATTING"/> 
                 <category android:name="android.intent.category.DEFAULT"/> 
             </intent-filter>
        </activity> 
        
         <service android:name=".services.IntentService"
             android:permission="liu.permission.service.internet"> 
         </service> 
    </application> 
      
                  
                      
 </manifest>


